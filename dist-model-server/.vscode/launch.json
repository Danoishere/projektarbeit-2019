    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test request",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/requesttester.py",
            "justMyCode": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "server.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        }
    ]
}